@{
    ViewBag.Title = "Erişim Reddedildi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="fas fa-exclamation-triangle"></i> Erişim Reddedildi</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger"></i>
                    </div>
                    <h4 class="mb-3">Bu sayfaya erişim yetkiniz bulunmamaktadır.</h4>
                    <p class="lead">Bu sayfayı görüntülemek için gerekli yetkilere sahip değilsiniz.</p>
                    <p>Eğer bu bir hata olduğunu düşünüyorsanız, lütfen sistem yöneticisiyle iletişime geçin.</p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
