@{
    ViewBag.Title = "Luxury Hotel'e Hoşgeldiniz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative mb-5">
    <div class="hero-image" style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80'); height: 600px; background-size: cover; background-position: center;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-md-6">
                    <div class="bg-white bg-opacity-75 p-4 rounded shadow">
                        <h1 class="display-4 fw-bold">Lüks ve Konfor Bir Arada</h1>
                        <p class="lead">Unutulmaz bir konaklama deneyimi için doğru yerdesiniz.</p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary btn-lg px-4 me-md-2">Odalarımızı Keşfedin</a>
                            <a href="@Url.Action("Create", "Reservation")" class="btn btn-outline-secondary btn-lg px-4">Rezervasyon Yapın</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Rooms Section -->
<div class="container mb-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="display-5">Öne Çıkan Odalarımız</h2>
            <p class="lead">Size en uygun odayı seçin ve konforlu bir konaklama deneyimi yaşayın</p>
        </div>
    </div>
    
    <div class="row">
        <!-- Kral Dairesi -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-zoom">
                <img src="https://images.unsplash.com/photo-1590490360182-c33d57733427?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1074&q=80" class="card-img-top" alt="Kral Dairesi" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Kral Dairesi</h5>
                    <p class="card-text">Lüks ve konforun bir arada sunulduğu özel jakuzili Kral Dairemiz.</p>
                    <p class="text-primary fw-bold">5000₺ <small class="text-muted">/gece</small></p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Details", "Rooms", new { id = 1 })" class="btn btn-outline-primary w-100">Detayları Görüntüle</a>
                </div>
            </div>
        </div>
        
        <!-- Suit Oda -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-zoom">
                <img src="https://images.unsplash.com/photo-1578683010236-d716f9a3f461?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="Suit Oda" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Suit Oda</h5>
                    <p class="card-text">Ayrı oturma alanı ve çalışma masası içeren konforlu Suit Odalarımız.</p>
                    <p class="text-primary fw-bold">3000₺ <small class="text-muted">/gece</small></p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Details", "Rooms", new { id = 2 })" class="btn btn-outline-primary w-100">Detayları Görüntüle</a>
                </div>
            </div>
        </div>
        
        <!-- Çift Kişilik Oda -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-zoom">
                <img src="https://images.unsplash.com/photo-1566665797739-1674de7a421a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1074&q=80" class="card-img-top" alt="Çift Kişilik Oda" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Çift Kişilik Oda</h5>
                    <p class="card-text">Konforlu queen size yatağı ve modern banyosuyla çiftler için ideal.</p>
                    <p class="text-primary fw-bold">1500₺ <small class="text-muted">/gece</small></p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Details", "Rooms", new { id = 3 })" class="btn btn-outline-primary w-100">Detayları Görüntüle</a>
                </div>
            </div>
        </div>
        
        <!-- Tek Kişilik Oda -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-zoom">
                <img src="https://images.unsplash.com/photo-1631049307264-da0ec9d70304?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="Tek Kişilik Oda" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Tek Kişilik Oda</h5>
                    <p class="card-text">Tek kişilik konaklamalar için ekonomik ve konforlu bir seçenek.</p>
                    <p class="text-primary fw-bold">1000₺ <small class="text-muted">/gece</small></p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Details", "Rooms", new { id = 4 })" class="btn btn-outline-primary w-100">Detayları Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">Tüm Odalarımızı Görüntüleyin</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="display-5">Otelimizin Özellikleri</h2>
            <p class="lead">Konforunuz için sunduğumuz hizmetler</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm text-center p-3">
                <div class="card-body">
                    <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Restoran & Bar</h5>
                    <p class="card-text">Zengin menü seçenekleriyle restoranımız ve barımız hizmetinizdedir.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm text-center p-3">
                <div class="card-body">
                    <i class="fas fa-spa fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Spa & Wellness</h5>
                    <p class="card-text">Spa merkezimizde rahatlayın ve kendinizi şımartın.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm text-center p-3">
                <div class="card-body">
                    <i class="fas fa-wifi fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Ücretsiz Wi-Fi</h5>
                    <p class="card-text">Tüm otelimizde yüksek hızlı ücretsiz Wi-Fi hizmeti sunuyoruz.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reservation CTA -->
<div class="container-fluid bg-light py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2>Hemen Rezervasyon Yapın</h2>
                <p class="lead mb-0">En iyi fiyat garantisi ve ücretsiz iptal seçeneği ile şimdi rezervasyon yapın.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="@Url.Action("Create", "Reservation")" class="btn btn-primary btn-lg">Rezervasyon Yap</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-zoom {
            transition: transform 0.3s ease;
        }
        .hover-zoom:hover {
            transform: scale(1.03);
        }
    </style>
}
