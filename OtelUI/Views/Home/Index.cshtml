@{
    ViewBag.Title = "Welcome to Luxury Hotel";
}

<!-- Hero Section -->
<div class="hero-section position-relative mb-5">
    <div class="hero-image" style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80'); height: 600px; background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark" style="opacity: 0.4;"></div>
        <div class="container position-relative h-100">
            <div class="row h-100 align-items-center">
                <div class="col-md-8 text-white">
                    <h1 class="display-4 fw-bold">Experience Luxury & Comfort</h1>
                    <p class="lead">Discover the perfect balance of luxury, comfort, and value at our hotel.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Create", "Reservation")" class="btn btn-primary btn-lg me-2">Book Now</a>
                        <a href="@Url.Action("Index", "Room")" class="btn btn-outline-light btn-lg">Explore Rooms</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Booking Form Section -->
<div class="container mb-5">
    <div class="card shadow">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-3 mb-3 mb-md-0">
                    <label class="form-label">Check-in Date</label>
                    <input type="date" class="form-control" id="quickCheckin" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <label class="form-label">Check-out Date</label>
                    <input type="date" class="form-control" id="quickCheckout" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <label class="form-label">Guests</label>
                    <select class="form-select" id="quickGuests">
                        <option value="1">1 Guest</option>
                        <option value="2" selected>2 Guests</option>
                        <option value="3">3 Guests</option>
                        <option value="4">4 Guests</option>
                        <option value="5">5+ Guests</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button id="quickSearchBtn" class="btn btn-primary w-100">Check Availability</button>
                </div>
            </div>
        </div>
    </div>
</div>

