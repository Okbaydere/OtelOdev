@model IEnumerable<Entities.Concreate.AdditionalService>
@{
    ViewBag.Title = "Ek Servislerimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Hero Section -->
<div class="hero-section position-relative mb-5">
    <div class="hero-image" style="background-image: url('https://images.unsplash.com/photo-1540555700478-4be289fbecef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80'); height: 400px; background-size: cover; background-position: center;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-md-6">
                    <div class="bg-white bg-opacity-75 p-4 rounded shadow">
                        <h1 class="display-4 fw-bold">Ek Servislerimiz</h1>
                        <p class="lead">Konaklamanızı daha keyifli hale getirecek özel hizmetlerimiz</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="container mb-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="display-5">Size Özel Hizmetlerimiz</h2>
            <p class="lead">Konaklamanız süresince faydalanabileceğiniz ek hizmetlerimiz</p>
        </div>
    </div>
    
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var service in Model)
            {
                string imageUrl;
                switch (service.ServiceName.ToLower())
                {
                    case "spa & masaj":
                        imageUrl = "https://images.unsplash.com/photo-1544161515-4ab6ce6db874?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
                        break;
                    case "özel şoför":
                        imageUrl = "https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
                        break;
                    case "restoran rezervasyonu":
                        imageUrl = "https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
                        break;
                    case "oda servisi":
                        imageUrl = "https://images.unsplash.com/photo-1551632436-cbf8dd35adfa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1171&q=80";
                        break;
                    case "çamaşır & ütü":
                        imageUrl = "https://images.unsplash.com/photo-1545173168-9f1947eebb7f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1171&q=80";
                        break;
                    case "havaalanı transferi":
                        imageUrl = "https://images.unsplash.com/photo-1721592872787-1c711270b4dc?q=80&w=2663&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
                        break;
                    case "bebek bakıcısı":
                        imageUrl = "https://images.unsplash.com/flagged/photo-1576523163697-795a7182b1b7?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
                        break;
                    case "özel tur rehberi":
                        imageUrl = "https://images.unsplash.com/photo-1528495612343-9ca9f4a4de28?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1074&q=80";
                        break;
                    default:
                        imageUrl = "https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80";
                        break;
                }
                
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-zoom">
                        <img src="@imageUrl" 
                             class="card-img-top" alt="@service.ServiceName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@service.ServiceName</h5>
                            <p class="card-text">@service.ServiceDescription</p>
                            <p class="text-primary fw-bold">@service.ServicePrice₺</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="@Url.Action("Details", "Service", new { id = service.AdditionalServiceID })" class="btn btn-outline-primary w-100">Detayları Görüntüle</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>Henüz eklenmiş ek servis bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>

<!-- Reservation CTA -->
<div class="container-fluid bg-light py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2>Hemen Rezervasyon Yapın</h2>
                <p class="lead mb-0">Ek servislerimizden faydalanmak için şimdi rezervasyon yapın.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="@Url.Action("Create", "Reservation")" class="btn btn-primary btn-lg">Rezervasyon Yap</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-zoom {
            transition: transform 0.3s ease;
        }
        .hover-zoom:hover {
            transform: scale(1.03);
        }
    </style>
}
