@model IEnumerable<Entities.Concreate.Reservation>
@{
    ViewBag.Title = "Rezervasyonlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2><i class="fas fa-calendar-check"></i> Rezervasyonlar</h2>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                </div>
            }

            <div class="mb-3">
                <a href="@Url.Action("Create", "Reservation")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Rezervasyon
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Giriş Tarihi</th>
                                <th>Çıkış Tarihi</th>
                                <th>Kişi Sayısı</th>
                                <th>Ücret</th>
                                <th>Müşteri</th>
                                <th>Oda</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ReservationID</td>
                                    <td>@item.EnterDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.ExitDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.PersonNumber</td>
                                    <td>@item.Fee TL</td>
                                    <td>
                                        @if (item.CustomerID.HasValue)
                                        {
                                            if (item.Customer != null)
                                            {
                                                @(item.Customer.CustomerName + " " + item.Customer.CustomerSurName)
                                            }
                                            else
                                            {
                                                <span class="text-muted">Müşteri ID: @item.CustomerID</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.RoomId.HasValue)
                                        {
                                            if (item.Room != null)
                                            {
                                                @item.Room.RoomNo
                                            }
                                            else
                                            {
                                                <span class="text-muted">Oda ID: @item.RoomId</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", "Reservation", new { id = item.ReservationID })" class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Reservation", new { id = item.ReservationID })" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Reservation", new { id = item.ReservationID })" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz kayıtlı rezervasyon bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
